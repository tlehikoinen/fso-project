{
  "name": "project",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test:api":"yarn workspace @project/api test",
    "start:app": "yarn workspace @project/client start",
    "server:dev": "yarn workspace @project/api dev",
    "server:test": "yarn workspace @project/api start:test",
    "build": "yarn workspace @project/api build:ui2",
    "dev": "concurrently --kill-others-on-fail \"yarn start:app\" \"yarn server:dev\"",
    "prod": "yarn workspace @project/api start",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "lint:api": "yarn workspace @project/api lint",
    "lint:client": "yarn workspace @project/client lint"
  },
  "license": "ISC",
  "engines": {
    "node": "14.17.0",
    "yarn": "1.x"
  },
  "dependencies": {
    "concurrently": "^6.0.2"
  },
  "devDependencies": {
    "cypress": "8.1.0",
    "eslint": "^7.32.0",
    "eslint-plugin-react": "^7.24.0"
  }
}
